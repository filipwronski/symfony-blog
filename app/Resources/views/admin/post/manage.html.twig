{% extends 'admin_base.html.twig' %}
{% block body %}
    <h2 class="page-header">Latest Posts</h2>          
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Category</th>
                <th>Create Date</th>
                <th>Modification Date</th>
                <th>Published</th>
                <th>Author</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts%}
                <tr>
                    <td>{{post.id}}</th>
                    <td>{{post.title}}</td>
                    <td>{{post.name}}
                    <td>{{post.createDate|date('F j, Y')}}</td>
                    <td>{{post.modificationDate|date('F j, Y')}}</td>
                    <td>
                        {% if post.published %}
                            <span class="glyphicon glyphicon-ok"></span>
                        {% else %}
                            <span class="glyphicon glyphicon-remove"></span>
                        {% endif%}
                    </td>
                    <td>{{post.username}}</td>
                    <td>
                        <a href="/blog/details/{{post.slug}}" class="btn btn-success">View</a>
                        <a href="/admin/edit/{{post.id}}" class="btn btn-default">Edit</a>
                        <a href="/admin/delete/{{post.id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor%}
        </tbody>
    </table>
{% endblock %}