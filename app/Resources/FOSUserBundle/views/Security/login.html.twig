{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="card card-container">
	 <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
     <p id="profile-name" class="profile-name-card"></p>
	<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

	    <input id="inputEmail" class="form-control" placeholder="{{ 'security.login.username'|trans }}" autofocus type="text" name="_username" value="" required="required" />

	    <input type="password" name="_password" type="password" id="inputPassword" class="form-control" placeholder="{{ 'security.login.password'|trans }}" required />
		
		<div id="remember" class="checkbox">
			<label>
		    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
		    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
			</label>
		</div>

	    <input class="btn btn-lg btn-primary btn-block btn-signin" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
	</form>
	<a href="#" class="forgot-password">
                Forgot the password?
    </a>
</div>

            
        </div><!-- /card-container -->
{% endblock fos_user_content %}
