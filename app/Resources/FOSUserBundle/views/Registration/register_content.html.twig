{% trans_default_domain 'FOSUserBundle' %}
  {{form_start(form, {'method': 'POST', 'attr':{'class': 'form-register'}})}}


  {{ form_widget(form.username, { 'attr': {'autofocus' : 'autofocus', 'class': 'form-control', 'placeholder': 'Username'}}) }}
    {{ form_errors(form.username) }}

  {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'E-mail'}}) }}
    {{ form_errors(form.email) }}

  {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
    {{ form_errors(form.plainPassword.first) }}


  {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}}) }}
    {{ form_errors(form.plainPassword.second) }}



  <button class="btn btn-lg btn-primary btn-block btn-register" type="submit" name="action">
    {{ 'registration.submit'|trans }}
  </button>


  {{ form_end(form) }}